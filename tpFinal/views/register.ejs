						<input type="date" id="fecha-nacimiento" name="fecha" class="inputR" required>
					</div>
					<div class="cajaR">
						<label class="labelR">DNI:</label>
						<input type="number" id="nro-documento" name="Dni" class="inputR" required>
					</div>
					<div class="cajaR">
						<label class="labelR">Foto de perfil:</label>
						<input type="text" name="FotoPerfil" class="inputR" required>
