<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->


<head>
    <%- include("./partials/head") %>
</head>


<body>
    <% if (locals.user != undefined) { %>
        <%- include("./partials/headerlogueado.ejs") %>
    <% } else{ %>
        <%- include("./partials/header") %>
    <% } %>


    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Productos</h2>
            </div>
               <% for (let i = 0; i < dato.length; i++) { %>
                   <div class="col-12 col-sm-6 col-lg-3">
                       <section class="product-box">
                           <a href="/product/detalle/<%=dato[i].ID %>">
                               <div class="product-box_image">
                                <img src="/images/products/<%= dato[i].Archivo %>">
                               </div>
                               <article class="product-box_data">
                                   <h2><%= dato[i].Producto %></h2>
                                   <p><%= dato[i].descripcion %></p>
                                   <p>Comentarios:</p>
                                   <% if (locals.user) { %>
                                    <p>Hecha por: <a class="linkUsuario" href="/profile/perfil/<%= dato[i].idUsuario %>"><%= dato[i].Usuarios.email %></a></p>
                                <% } else { %>
                                    <p>Hecha por: <a class="linkUsuario" href="/profile/login"><%= dato[i].Usuarios.email %></a></p>
                                <% } %>
                                
                                   
                               </article>
                           </a>
                       </section>
                   </div>
               <% } %>    
   
        </div>
    </div>
</body>
</html>