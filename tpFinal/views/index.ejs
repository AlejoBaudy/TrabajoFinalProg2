<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include("./partials/head") %>
</head>
<body>
	<%- include("./partials/header") %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detalle/<%= productos[i].id %> ">
							<div class="product-box_image">
								<img src="<%= productos[i].Imagen %>" alt="<%= productos[i].Producto %>"> 
							</div>
							<article class="product-box_data">
								<h2><%= productos[i].Producto %></h2>
								<p><%= productos[i].Descripcion %></p> 
								<p>Comentarios: <%= productos[i].Comentarios.length %></p> 
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<%- include("./partials/footer") %>
</body>	
</html>