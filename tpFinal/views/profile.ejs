<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include("./partials/head") %>
</head>
<body>
	<%- include("./partials/headerLogueado") %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= fotoUsuario %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <p><%= nombreUsuario %></p>
						<a href="/profile">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p><%= emailUsuario %></p>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detalle/<%= i %>">
							<div class="product-box_image">
								<img src="<%= productos[i].Imagen %>" alt="<%= productos[i].Producto %>">
							</div>
							<article class="product-box_data">
								<h2><%= productos[i].Producto %></h2>
								<p>Descripci√≥n: <%= productos[i].Descripcion %></p>
								<p>Comentarios: <%= productos[i].Comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

	<%- include("./partials/footer") %>
</body>	
</html>